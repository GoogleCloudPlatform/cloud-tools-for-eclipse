<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="com.google.cloud.tools.eclipse.preferences.areas" name="Preference Areas" schema="schema/com.google.cloud.tools.eclipse.preferences.areas.exsd"/>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            id="com.google.cloud.tools.eclipse.preferences.preferences.CloudToolsPreferencePage"
            name="Google Cloud Tools"
            class="com.google.cloud.tools.eclipse.preferences.areas.AreaBasedPreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.google.cloud.tools.eclipse.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="com.google.cloud.tools.eclipse.preferences.areas">
      <area
            class="com.google.cloud.tools.eclipse.preferences.AnalyticsOptInArea"
            page="com.google.cloud.tools.eclipse.preferences.preferences.CloudToolsPreferencePage"
            preferences="instance://com.google.cloud.tools.eclipse.preferences"
            title="Usage Statistics">
      </area>
   </extension>

</plugin>
