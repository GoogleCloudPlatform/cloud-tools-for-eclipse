<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

  <extension point="org.eclipse.ui.commands">
    <command
      description="%deployStandardCommandDescription"
      id="com.google.cloud.tools.eclipse.appengine.deploy"
      name="%deployStandardCommandName">
    </command>
  </extension>
  
  <extension point="org.eclipse.ui.menus">
    <menuContribution
      allPopups="false"
      locationURI="popup:org.eclipse.ui.popup.any?after=additions">
      <command
        commandId="com.google.cloud.tools.eclipse.appengine.deploy"
        label="%deployStandardMenuLabel"
        style="push">
        <visibleWhen checkEnabled="true" />
      </command>
    </menuContribution>
  </extension>
  
  <extension point="org.eclipse.ui.handlers">
    <handler
      class="com.google.cloud.tools.eclipse.appengine.deploy.standard.StandardDeployCommandHandler"
      commandId="com.google.cloud.tools.eclipse.appengine.deploy">
      <enabledWhen>
        <and>
          <count value="1" />
          <iterate>
            <adapt type="org.eclipse.core.resources.IProject">
              <test
                forcePluginActivation="true"
                property="org.eclipse.wst.common.project.facet.core.projectFacet"
                value="com.google.cloud.tools.eclipse.appengine.facet" />
            </adapt>
          </iterate>
        </and>
      </enabledWhen>
    </handler>
  </extension>

  <extension
    point="org.eclipse.ui.console.consolePatternMatchListeners">
    <consolePatternMatchListener
      class="com.google.cloud.tools.eclipse.ui.util.console.PatternToHyperlinkConverter"
      id="com.google.cloud.tools.eclipse.appengine.deploy.consolePatternMatchListener"
      regex="https://.+\.appspot\.com">
      <enablement>
        <test
          property="com.google.cloud.tools.eclipse.ui.util.console.name"
          value="App Engine Deploy">
        </test>
      </enablement>
    </consolePatternMatchListener>
  </extension>

  <extension point="org.eclipse.core.expressions.propertyTesters">
    <propertyTester
      id="com.google.cloud.tools.eclipse.ui.util.console.consolePropertyTester"
      namespace="com.google.cloud.tools.eclipse.ui.util.console"
      properties="name"
      type="org.eclipse.ui.console.IConsole"
      class="com.google.cloud.tools.eclipse.ui.util.console.ConsolePropertyTester">
    </propertyTester>
  </extension>
</plugin>
